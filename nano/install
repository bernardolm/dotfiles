log start "nano install"

if [ -f "$NANORC_FILE" ]; then
	mv "$NANORC_FILE" "$HOME/bkp.$(now).nanorc"
fi

if [ -L "$NANORC_FILE" ]; then
	rm -f "$NANORC_FILE"
fi

if [ ! -f "$NANORC_FILE" ]; then
	ln -sf "$DOTFILES/nano/.nanorc" "$NANORC_FILE"
fi

if [ ! -d "$HOME/.nano" ]; then
  git clone git@github.com:scopatz/nanorc.git "$HOME/.nano"
fi

log finish "nano install"

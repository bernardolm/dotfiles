function shell_folder_summary() {
    local files=$(find . -maxdepth 1 -type f | wc -l)
    local folders=$(find . -maxdepth 1 -type d | wc -l)
    local hiddenFiles=$(find . -maxdepth 1 -type f | egrep "^\./\." | wc -l)
    local print_this="$(color bg_white) $PWD $(color no)"
    print_this+="$(color bg_purple) ğŸ“‚ $folders $(color no)"
    print_this+="$(color bg_rose) ğŸ“„ $files $(color no)"
    print_this+="$(color bg_green) ğŸ—„ï¸ $hiddenFiles $(color no)"
    echo -ne "$print_this"
}

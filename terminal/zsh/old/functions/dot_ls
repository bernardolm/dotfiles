
function dot_ls() {
	if [[ "$#" -eq 0 ]]; then
		(cd /
		for i in $(dot ls-files); do
			echo -n "$(dot -c color.status=always status $i -s | sed "s#$i##")"
			echo -e "¬/$i¬\e[0;33m$(dot -c color.ui=always log -1 --format="%s" -- $i)\e[0m"
		done
		) | column -t --separator=¬ -T2
	else
		dot $*
	fi
}

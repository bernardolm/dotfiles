function log_finish() {
	local val=$(elapsed_time_get "$@")

	local msg="üö• $1 $(color light_cyan)was finished$(color no) "
	local msg_suffix=""

	if [[ ! -z "$val" ]]; then
		local result=$(elapsed_time $val)
		if [ ! -z "$result" ]; then
			msg_suffix+="‚è±Ô∏è  took $result"
		fi

	else
		msg_suffix="‚åö at $(color yellow)$(date +"%H:%M") $(color gray)$(date +"%S.%N")$(color no) "

	fi

	elapsed_time_del "$@"

	if [ ! -z "$msg_suffix" ]; then
		log_echo "$msg$msg_suffix"
	fi
}

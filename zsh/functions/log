#!/usr/bin/env zsh

function log() {
    local level=$1

    local silenced_levels=("debug" "start" "finish")

    if [ ! "$SHELL_DEBUG" = "true" ]; then
        if [[ ${silenced_levels[@]} =~ $level ]]; then
            return
        fi
    fi

    shift

    . "${DOTFILES}/zsh/functions/caller"

    for f in $(find "${DOTFILES}/zsh/functions" -name "log_*"); do
        [[ -f $f ]] && source -- "$f"
    done

    eval "log_$level '$@'"
}

function emoji_random() {
  local list=("$@")

  if [ -z "$list" ]; then
    list=(
        💩
        🐦
        🚀
        🐞
        🎨
        🍕
        🐭
        👽
        ☕️
        🔬
        💀
        🐷
        🐼
        🐶
        🐸
        🐧
        🐳
        🍔
        🍣
        🍻
        🔮
        💰
        💎
        💾
        💜
        🍪
        🌞
        🌍
        🐌
        🐓
        🍄
    )
  fi

    local index=$(($RANDOM%${#list[@]}+1))

    echo -n ${list[$index]}
}

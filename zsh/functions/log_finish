function log_finish() {
    key=$@
    msg="üö• $1 was finished "
    since=$___elapsed_time["$key"]

    if [[ ! -z "$since" ]] && command -v elapsed_time >/dev/null; then
        msg+="‚è±Ô∏è after "$(elapsed_time $since)
    else
        now=$(date +"%H:%M:%S in %Y-%m-%d")
        msg+="‚åö at $now "
    fi

    log_echo $msg
}

source $DOTFILES/zsh/init.d/05_colors.zsh

function log_finish() {
	local val=$(elapsed_time_get "$@")

	local msg="üö• $1 ${color_gray}was finished${color_nc} "
	local msg_suffix=""

	if [[ ! -z "$val" ]]; then
		local result=$(elapsed_time $val)
		if [ ! -z "$result" ]; then
			msg_suffix+="‚è±Ô∏è took $result"
		fi

	else
		local now=$(date +"%H:%M:%S in %Y-%m-%d")
		msg_suffix="‚åö at $now "

	fi

	elapsed_time_del "$@"

	if [ ! -z "$msg_suffix" ]; then
		log_echo "$msg$msg_suffix"
	fi
}

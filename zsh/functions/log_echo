#!/usr/bin/env zsh

function log_echo() {
    $SHELL_DEBUG || return

    local shell
    shell="$0"

    local icon
    icon="$1"

    shift

    local color
    color="$1"

    shift

    [ -n "$icon" ] && icon="$icon "

    local loutput=0
    local lcaller=0
    local rpad=0
    local space=""
    local _caller=""
    local _caller_end=""
    local cols=$(tput cols)

    $SHELL_TRACE && _caller=$(caller)

    local output="${icon}${color} $@ ${NC}"

    if ! command -v ansi2txt &>/dev/null; then
        echo -e "${RED} you need to install colorized-logs package: ${NC}"
        echo -e "${RED} sudo apt-get install --no-install-recommends --yes colorized-logs ${NC}"
        function ansi2txt() {
            echo $@
        }
    fi

    if [[ $cols -ge 80 ]]; then
        loutput=$(echo "${output}" | ansi2txt | wc -L)

        if [[ $loutput -gt $cols ]]; then
            loutput=$(($loutput-$cols))
        fi

        rpad=$(($cols-$loutput))
        lcaller=$(echo "${_caller}" | ansi2txt | wc -L)
        rpad=$(($rpad-$lcaller))
        if [[ "$shell" =~ "zsh" ]]; then
            space=${(l:$rpad:: :)}
        fi
    fi

    echo -e ${output}${space}${_caller}${_caller_end}
}

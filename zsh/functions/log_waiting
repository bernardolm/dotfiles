function log_waiting() {
	local max=10
	local wait_time=7s

	while true; do
		sleep $wait_time

		local val=$(elapsed_time_get "$@")
		[ "$val" = "" ] && break

		max=$(expr $max - 1)
		[ "$max" -le 0 ] && break

		emoji=$(emoji_random ðŸ¦¥ ðŸ˜´ ðŸ’¤ ðŸ¥±)
		log_echo "   $@ $(color gray)is taking too long to load$(color no) $emoji"
	done
}

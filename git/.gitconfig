[apply]
    whitespace = fix

[commit]
    gpgsign = true

[diff]
    renames = copies
    colorMoved = zebra

[github]
    user = bernardolm

[gpg]
    format = ssh

[include]
    path = ~/sync/git/gitconfig

[init]
    defaultBranch = main

[merge]
    log = true

[safe]
	directory = /home/bernardo/workspaces/bernardolm/dotfiles
	directory = /home/bernardo/workspaces/bernardolm/step-task

[user]
    name = Bernardo Loureiro
    signingkey = ~/.ssh/id_ed25519.pub
